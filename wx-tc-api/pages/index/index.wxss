page {
  background-color: #F4F4F4;
}

.container {
  width: 100%;
  height: 400rpx;
  background-color: #036FC9;
  border-radius: 0 0 50rpx 50rpx;
}

.container .location {
  position: relative;
  left: 50%;
  top: 20%;
  transform: translate(-50%, -50%);
  background-color: #fff;
  width: 320rpx;
  padding: 3rpx 0rpx 5rpx 40rpx;
  border-radius: 40rpx 40rpx 40rpx 40rpx;
  font-size: 32rpx;
}

.container .location .location_icon {
  position: absolute;
  left: 5rpx;
  top: 5rpx;
  background-color: #036FC9;
  border-radius: 50%;
  color: orange;
  font-size: 39rpx;
  width: 40rpx;
  height: 40rpx;
}

.container .location .icon-jiantou {
  position: absolute;
  right: 7rpx;
  top: 15rpx;
  font-size: 24rpx;
  text-align: center;
}

.container .location .location_titme {
  margin-left: 10rpx;
  color: #036FC9;
}

.container .sweep {
  display: flex;
  flex-direction: column;
  margin: 0 auto;
  margin-top: 120rpx;
  background-color: #fff;
  width: 94%;
  border-radius: 1%;
  padding: 0rpx 40rpx;
  margin-bottom: 30rpx;
}

.container .start_sweep {
  display: flex;
}

.container .start_sweep .start_sweep_shoop {
  padding-top: 50rpx;
  font-size: 24rpx;
  line-height: 55rpx;
  margin-right: 86rpx;
}

.container .start_sweep .start_sweep_shoop :nth-child(1) {
  font-size: 55rpx;
  margin-bottom: 20rpx;
  font-weight: 600;
  color: #282828;
}

.container .start_sweep .start_sweep_shoop :nth-child(2) {
  color: #5D5D5D;
}

.container .start_sweep .start_sweep_shoop :nth-child(3) {
  color: #E88237;
}

.container .start_sweep .start_sweep_icon {
  padding-top: 30rpx;
}

.container .start_sweep .start_sweep_icon .start_icon {
  position: relative;
  width: 230rpx;
  height: 230rpx;
  background-color: #FFEFE0;
  border-radius: 50%;
}

.container .start_sweep .start_sweep_icon .start_icon .child {
  width: 200rpx;
  height: 200rpx;
  background-color: #FE9E37;
  border-radius: 50%;
  position: relative;
  top: 15rpx;
  left: 16rpx;
  text-align: center;
  color: #fff;
}

.container .start_sweep .start_sweep_icon .start_icon .child .icon-saomagou {
  padding: 30rpx 0px 15rpx 0;
  font-size: 80rpx;
  font-weight: 600;
}

.container .start_sweep .start_sweep_icon .start_icon .child :nth-child(2) {
  font-size: 28rpx;
}

.container .start_sweep_nav {
  margin: 40rpx 20rpx;
  display: flex;
}

.container .start_sweep_nav view {
  width: 33.33%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}

.container .start_sweep_nav view :nth-child(1) {
  width: 60rpx;
  height: 60rpx;
  font-size: 60rpx;
  color: #0071CF;
  margin-bottom: 20rpx;
}

.container .start_sweep_nav view :nth-child(2) {
  font-size: 24rpx;
}

.container .strat_hide {
  display: flex;
  padding: 20rpx 40rpx;
  border-top: 1rpx solid #ccc;
}

.container .strat_hide view {
  width: 50%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}

.container .strat_hide view :nth-child(1) {
  width: 60rpx;
  height: 60rpx;
  font-size: 60rpx;
  color: #666666;
}

.container .strat_hide view :nth-child(2) {
  font-size: 24rpx;
}

.container .strat_show {
  padding: 10rpx 0rpx;
  text-align: center;
  font-size: 24rpx;
}

.container .strat_show .zhankai1 {
  position: relative;
}

.container .strat_show .zhankai {
  position: absolute;
  left: 20rpx;
  top: 34rpx;
}

.container .discounts_pad {
  padding: 0rpx 20rpx;
}

.container .discounts_pad .discounts {
  display: flex;
}

.container .discounts_pad .discounts view {
  flex: 1;
}

.container .discounts_pad .discounts .discounts_youhui {
  margin-right: 20rpx;
  display: flex;
  background-color: #fff;
  padding: 20rpx 0 20rpx 20rpx;
}

.container .discounts_pad .discounts .discounts_youhui view {
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}

.container .discounts_pad .discounts .discounts_lipin {
  display: flex;
  background-color: #fff;
  padding: 20rpx 0 20rpx 20rpx;
}

.container .discounts_pad .discounts .discounts_lipin view {
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  flex: 1;
}

.container .discounts_pad .discounts image {
  width: 50%;
  height: auto;
}

.container .discounts_pad .lingjuan {
  font-size: 28rpx;
  font-weight: 600;
}

.container .discounts_pad .day {
  font-size: 20rpx;
  color: #9C9A9B;
}

.container .footer {
  position: absolute;
  left: 50%;
  margin-top: 100rpx;
  transform: translateX(-50%);
}

.container .footer text {
  font-size: 22rpx;
}

.container .footer .seg {
  margin: 0rpx 40rpx;
}

.container .home {
  position: absolute;
  top: 85%;
  left: 40rpx;
}

.container .home .home_yuan {
  display: flex;
  flex-direction: column;
  width: 100rpx;
  height: 100rpx;
  background-color: #036FC9;
  border-radius: 50%;
  color: #fff;
}

.container .home .home_yuan .home_icon {
  position: relative;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-bottom: 4rpx;
}

.container .home .home_yuan .home_icon :nth-child(1) {
  font-size: 54rpx;
}

.container .home .home_yuan .home_icon .home_jiazai {
  position: absolute;
  top: 17rpx;
  left: 35rpx;
  color: #E88237;
}

.container .home .home_yuan .home_item {
  font-size: 16rpx;
  text-align: center;
}
